<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/item_bg"
              android:orientation="horizontal"
              android:paddingTop="@dimen/app_item_margin_vertical"
              android:paddingBottom="@dimen/app_item_margin_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/app_icon_margin_left"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"/>

    <TextView
        android:id="@+id/app_name"
        android:text="@string/default_app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/app_name_text"
        android:layout_marginStart="@dimen/app_name_margin_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/app_status"
        android:text="@string/default_modification_status"
        android:layout_marginStart="@dimen/app_status_margin_horizontal"
        android:layout_marginEnd="@dimen/app_status_margin_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>